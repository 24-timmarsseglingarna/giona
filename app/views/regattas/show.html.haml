%h1
  = @regatta.name
%p
  %b Arrangör:
  = @regatta.organizer

.panel.panel-default
  .panel-heading
    Seglingar
  / /.panel-heading
  .panel-body
    %table#giona-races.table.table-striped.table-bordered.table-hover{:width => "100%"}
      %thead
        %tr
          %th Period
          %th Starta från
          %th Starta till
          %th Gemensam målgång
      %tbody
        - @regatta.races.each do |race|
          %tr{:class => cycle('even', 'odd'), :onclick => "window.location.href = '#{race_path(race)}';", :style => "cursor: pointer;"}
            %td= race.period
            %td= l race.start_from 
            %td= l race.start_to
            %td= race.common_finish



%p
  %b Mejlavsändare: 
  = @regatta.name_from + ' <' + @regatta.email_from + '>'

%p
  %b Informera om anmälan:
  = @regatta.email_to

%p
  %b Anmälningsmejl:
  = @regatta.confirmation

%p
  %b Lägg till en segling:
  %ul 
    %li=link_to "Period: 12", new_race_path(:regatta => @regatta, :period => '12')  
    %li=link_to "Period: 24", new_race_path(:regatta => @regatta, :period => '24')  
    %li=link_to "Period: 48", new_race_path(:regatta => @regatta, :period => '48')  
    %li=link_to "Period: 72", new_race_path(:regatta => @regatta, :period => '72')  
    %li=link_to "Period: 96", new_race_path(:regatta => @regatta, :period => '96')  
    %li=link_to "Period: 120", new_race_path(:regatta => @regatta, :period => '120')  


= link_to 'Edit', edit_regatta_path(@regatta)
\|
= link_to 'Back', regattas_path

