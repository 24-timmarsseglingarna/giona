%h1 Deltagaranmälan/loggbok

.panel.panel-default
  .panel-heading
    Seglingen
  .panel-body    
    .legend Regatta:
    %p
      %i.fa.fa-trophy(aria-hidden='true')    
      =link_to @team.race.regatta.name, @team.race.regatta  
    .legend Arrangör:
    %p  
      %i.fa.fa-institution(aria-hidden='true')
      = @team.race.regatta.organizer  
    .legend Segling:
    %p  
      %i.fa.fa-bell(aria-hidden='true')
      = @team.race.name      
    .legend Starttid:
    %p  
      %i.fa.fa-clock-o(aria-hidden='true')    
      = race_start(@team.race)
    .legend Seglingsperiod:
    %p
      %i.fa.fa-hourglass-1(aria-hidden='true')    
      = @team.race.period
      timmar
    =link_to 'Ändra', edit_team_path(@team, :section=>:race), class: "btn btn-primary"
    


.panel.panel-default
  .panel-heading
    Seglingsdetaljer
  .panel-body        
    .legend Startplats:
    %p
      %i.fa.fa-flag(aria-hidden='true')
      = @team.start_point
      Rönnskär
    .legend Mål:
    %p
      %i.fa.fa-flag-checkered(aria-hidden='true') 
      = @team.finish_point
      Grönö
    .legend Havs-/kustsegling:
    %p
      %i.fa.fa-exchange(aria-hidden='true')
      - if @team.offshore
        Hav
      - else
        Kust

    =link_to 'Ändra', edit_team_path(@team, :section=>:race_details), class: "btn btn-primary"



.panel.panel-default
  .panel-heading
    Båten
  .panel-body
    %p
      %i.fa.fa-ship(aria-hidden='true') 
      - unless @team.boat.nil?
        = link_to @team.boat_class_name, @team.boat.boat_class
      - else
        = @team.boat_class_name
      = @team.boat_sail_number
      |
      - unless @team.boat.nil?
        = link_to @team.boat_name, @team.boat
      - else
        = @team.boat_name
    .legend Startnummer:
    %p
      %i.fa.fa-file-text-o(aria-hidden='true') 
      = @team.start_number        
    .legend Handikapp:
    %p
      %i.fa.fa-calculator(aria-hidden='true')    
      = @team.handicap
      enligt SRS-tabell

    =link_to 'Ändra', edit_team_path(@team, :section=>:race), class: "btn btn-primary"


.panel.panel-default
  .panel-heading
    Besättningen
  .panel-body
    .legend Skeppare:
    %p
      %i.fa.fa-user-circle(aria-hidden='true') 
      - unless @team.skipper.nil?  
        = link_to(@team.skipper.name, @team.skipper) 
    -unless @team.skipper.nil?
      =@team.skipper.phone 
      %br
      =@team.skipper.email
      %br
      =@team.skipper.street
      %br
      #{@team.skipper.zip} #{@team.skipper.city}
      %br
      =@team.skipper.country
    %br
    .legend Gastar:
    - unless @team.seamen.empty?  
      %ul
        - for person in @team.seamen do 
          %li
            %i.fa.fa-user-o(aria-hidden='true') 
            = link_to person.name, person
    - else
      %p         
        %i.fa.fa-user-o(aria-hidden='true')
    .legend Söker gastar:
    %p
      %i.fa.fa-user-secret(aria-hidden='true') 
      3

    =link_to 'Ändra', edit_team_path(@team, :section=>:race), class: "btn btn-primary"


.panel.panel-default
  .panel-heading
    Resultat
  .panel-body
    .legend Status:
    %p
      %i.fa.fa-file(aria-hidden='true') 
      -if @team.active
        Aktiv
      -else
        Arkiverad
    .legend Plakettdistans:
    %p
      %i.fa.fa-trophy(aria-hidden='true') 
      = @team.plaque_distance unless @team.plaque_distance.nil?
      M.
    - if @team.did_not_start
      Startade inte. 
    - if @team.did_not_finish
      Fullföljde inte.
    Start: ...
    Mål: ... 
    Försening: ... minuter.
    Seglad distans: .... M
    Avdrag: .... M
    Resulterande distans: ... M

= link_to 'Edit', edit_team_path(@team)
\|
= link_to 'Back', teams_path
