.panel.panel-default
  .panel-heading
    Seglingen
  .panel-body
    .legend Regatta:
    %p
      %i.fa.fa-trophy(aria-hidden='true')
      =@team.race.regatta.name
    .legend BÃ¥t:
    %p
      %i.fa.fa-ship(aria-hidden='true')
      #{@team.boat_name} | #{@team.boat_type_name} | Segelnummer: #{@team.boat_sail_number}

    = semantic_form_for @team do |f|
      = f.inputs do
        = f.input :handicap, :collection => handicap_table(@team.handicap_type), :include_blank => false, :label => Handicap.types[@team.handicap_type]

      = f.actions do
        = f.action :submit, :as => :input, :input_html => {:class => 'btn', :class => 'btn-group'}

    %br
    = link_to 'Tillbaka', @team, :class => :get_back
