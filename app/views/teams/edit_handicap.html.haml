.panel.panel-default
  .panel-heading
    Seglingen
  .panel-body
    .legend Regatta:
    %p
      %i.fa.fa-trophy(aria-hidden='true')
      =@team.race.regatta.name
    .legend Båt:
    %p
      %i.fa.fa-ship(aria-hidden='true')
      #{@team.boat_name} | #{@team.boat_type_name} | Segelnummer: #{@team.boat_sail_number}

      - if params[:step] == '1'
        = semantic_form_for @team, url: { action: :update_handicap } do |f|
          = f.inputs do
            = f.input :handicap_type, :as => :radio, :collection => Handicap.types.invert
            = f.input :id, :as => :hidden
          = f.actions do
            = f.action :submit, :label => 'Nästa'
      - else
        = semantic_form_for @team do |f|
          = f.inputs do
            - if (@team.handicap_type == 'SoonSrsCertificate' || @team.handicap_type == 'SoonSxkCertificate' )
              Vi noterar att du är på väg att skaffa mätbrev. I väntan på det anstätter vi SXK-tal: 2,00. När du fått ditt mätbrev ändrar du deltagaranmälan.
              %p
              = f.input :id, :as => :hidden
            - else
              = f.input :handicap, :collection => handicap_table(@team.handicap_type), :include_blank => false, :label => Handicap.types[@team.handicap_type]
          = f.actions do
            = f.action :submit, :as => :input, :input_html => {:class => 'btn', :class => 'btn-group'}, :label => 'Skicka'

    %br
    = link_to 'Tillbaka', :back, :class => :get_back
