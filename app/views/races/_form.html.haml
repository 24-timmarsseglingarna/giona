= semantic_form_for @race do |f|
  = f.inputs do
    = f.input :regatta, input_html: { disabled: true } 
    = f.input :name, :label => 'Seglingens namn'
    = f.input :start_from, :as => :string
    = f.input :start_to, :as => :string
    = f.input :period, :as => :radio, :collection => [12, 24, 48, 72, 96, 120]
    = f.input :common_finish
    = f.input :mandatory_common_finish
    = f.input :regatta_id, :as => :hidden 
 
  = f.actions do
    = f.action :submit, :as => :button
    = f.action :cancel, :as => :link   

